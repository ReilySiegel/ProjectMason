                        <Insets left="40.0" top="40.0" />
                     </HBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER_RIGHT" maxHeight="-Infinity" prefHeight="500.0" style="-fx-background-color: e2e2e2;" HBox.hgrow="ALWAYS">
